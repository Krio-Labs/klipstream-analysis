# KlipStream Analysis Environment Variables (YAML format)
# Copy this file to .env.yaml and fill in your actual values
# This format is used for Cloud Run deployment

# API Keys (Required)
DEEPGRAM_API_KEY: "your_deepgram_api_key_here"
GOOGLE_API_KEY: "your_google_api_key_here"
NEBIUS_API_KEY: "your_nebius_api_key_here"

# Google Cloud Storage Configuration
GCS_PROJECT: "klipstream"
USE_GCS: "true"
GCS_VOD_BUCKET: "klipstream-vods-raw"
GCS_TRANSCRIPT_BUCKET: "klipstream-transcripts"
GCS_CHATLOG_BUCKET: "klipstream-chatlogs"
GCS_ANALYSIS_BUCKET: "klipstream-analysis"

# Convex Database Configuration
CONVEX_DEPLOYMENT: "dev:your-deployment-name"
CONVEX_URL: "https://your-deployment.convex.cloud"
CONVEX_ACTION_URL: "https://your-deployment.convex.site"
CONVEX_API_KEY: "dev:your-deployment|your_api_key_here"

# Base Directory Configuration
# For Cloud Run or Cloud Functions, use /tmp
# For local development, use .
BASE_DIR: "/tmp"
