# KlipStream Analysis Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys (Required)
# Get a free API key at https://cloud.google.com/docs/authentication/api-keys
GOOGLE_API_KEY=your_google_api_key_here

# Get API key from https://deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Get API key from Nebius Studio
NEBIUS_API_KEY=your_nebius_api_key_here

# Application Configuration
PORT=3000

# Convex Database Configuration
# Get these from your Convex dashboard
CONVEX_DEPLOYMENT=dev:your-deployment-name
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_ACTION_URL=https://your-deployment.convex.site
CONVEX_API_KEY=dev:your-deployment|your_api_key_here

# Google Cloud Storage Configuration (Optional)
# Path to your service account key file
GCP_SERVICE_ACCOUNT_PATH=./path-to-your-service-account-key.json

# Cloud Environment Configuration (Set automatically in Cloud Run)
# BASE_DIR=/tmp
# USE_GCS=true
# GCS_PROJECT=klipstream
